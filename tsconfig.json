{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "lib": [
      "es2024",
      "esnext.array",
      "esnext.collection",
      "esnext.iterator",
      "esnext.promise"
    ],
    "module": "nodenext",
    "target": "es2024",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "typeRoots": [
      "./node_modules/@types/"
    ]
  }
}
